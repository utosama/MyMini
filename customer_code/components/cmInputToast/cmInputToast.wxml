<!--components/cmInputToast/cmInputToast.wxml-->
<view class='body'>
  <view class='containor'>
    <view class='hint-containor'>
      
      <view class='hint-label'>
        {{title}}
      </view>
      <view class='input-view'>
        <input placeholder-class='placeholder' maxlength='5' placeholder='请输入姓名(五个字以内)' bindinput='inputWord'> </input>
      </view>
    </view>
    <view class='confirm' >
      <view bindtap='cancel' class='confirm-cancel'>取消</view>
      <view bindtap='confirm' class="{{abled?'confirm-ok active':'confirm-ok'}}">确定</view>
    </view>
  </view>
</view>
